journal = {Ecology},
keywords = {continuation ratio model,disturbance ecology,fire,geographic information,gis,insect outbreaks,ordinal logistic regression,robust huber-white covariance estimator,spa-,spatial autocorrelation,statistical modeling,system,tial overlay analysis},
