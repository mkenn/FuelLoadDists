isbn = {1509664270},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {adaptive ecosystem management,environmental narrative,fire regimes,human settlement,inland northwest,landscape change,management history,patterns,vegetation},
month = {jun},
