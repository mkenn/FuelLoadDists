@article{ISI:000221587200004,
abstract = {In ecology much attention has been paid towards seed dispersal of
fleshy-fruited plants, however, knowledge is lacking about the Iona-term
demographic consequences of variation in dispersal distance and fruit
removal rate, particularly given the natural variability of the
environment the organism lives in. In this study we used a spatially
