issn = {0931-1890},
journal = {Trees},
keywords = {airborne lidar {\'{a}} canopy,profiles {\'{a}} remote sensing,structure {\'{a}},vertical foliage profiles {\'{a}},weibull {\'{a}} canopy volume},
