doi = {10.1016/j.foreco.2011.04.016},
file = {:D\:/MendeleyDocs/Lyons-Tinsley, Peterson - 2012 - Surface fuel treatments in young, regenerating stands affect wildfire severity in a mixed conifer fores.pdf:pdf},
