keywords = {d61,jel classification,nature conservation,project evaluation,q20,the netherlands},
number = {4},
pages = {363--378},
title = {{Evaluation of Nature Conservation An Application to the Dutch Ecological Network}},
volume = {16},
year = {2000}
}
