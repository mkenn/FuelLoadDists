journal = {Ecological Modelling},
month = {mar},
pages = {56--69},
publisher = {Elsevier B.V.},
title = {{Modeling high-severity fire, drought and climate change impacts on ponderosa pine regeneration}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0304380013000124},
volume = {253},
year = {2013}
}
@article{Nicolini2003,
