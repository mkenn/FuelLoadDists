publisher = {Elsevier B.V.},
title = {{Evaluating ensemble forecasts of plant species distributions under climate change}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0304380013003384},
volume = {266},
year = {2013}
}
@article{Castelletti2010,
