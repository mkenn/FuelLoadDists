@article{ISI:000176728000006,
abstract = {Ecologists and forest managers both recognize the importance of detailed
spatio-temporal knowledge on local small-scale disturbances (SSD)
dynamics and impacts. However, a large proportion of the knowledge about
SSD is based on temporally short data sets, and on non-spatial analysis.
