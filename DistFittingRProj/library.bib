doi = {10.1890/10-0256.1},
file = {:D\:/MendeleyDocs/Williams, Baker - 2011 - Testing the accuracy of new methods for reconstructing historical structure of forest landscapes using GLO surv.pdf:pdf},
isbn = {0012-9615},
issn = {00129615},
journal = {Ecological Monographs},
keywords = {Accuracy,Estimation bias,General Land Office,Historical range of variability,Landscape,Pinus ponderosa,Plotless density estimator,Ponderosa pine,Public Land Survey System,Reconstruction.},
number = {1},
pages = {63--88},
title = {{Testing the accuracy of new methods for reconstructing historical structure of forest landscapes using GLO survey data}},
volume = {81},
year = {2011}
}
