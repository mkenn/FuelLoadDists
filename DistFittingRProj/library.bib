file = {:D\:/MendeleyDocs/Bukowski, Baker - 2013 - Historical fire regimes, reconstructed from land-survey data, led to complexity and fluctuation in sagebrush la.pdf:pdf},
isbn = {1051-0761},
issn = {10510761},
journal = {Ecological Applications},
keywords = {Fire management,Fire rotation,Fire-size distribution,Historical fire regime,Land survey,Sagebrush},
number = {3},
