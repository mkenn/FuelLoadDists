keywords = {allometry,apical control,plant architecture,resource allocation,source-sink},
pages = {231--249},
title = {{Factors controlling resource allocation in mountain birch}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S1433831904700621},
volume = {5/4},
