isbn = {0304-3800},
issn = {03043800},
journal = {Ecological Modelling},
keywords = {Boreal forest,Fire disturbance,Fire effects,Fire regime,LANDIS-II,Labrador,Mixed conifer forest,Sierra Nevada},
number = {23},
pages = {3380--3393},
title = {{Simulating dynamic and mixed-severity fire regimes: A process-based fire extension for LANDIS-II}},
