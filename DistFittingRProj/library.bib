journal = {Landscape Ecology},
keywords = {Fire ecology,High severity,Mixed-conifer,Tree regeneration},
number = {9},
pages = {1801--1813},
title = {{Early forest dynamics in stand-replacing fire patches in the northern Sierra Nevada, California, USA}},
volume = {28},
