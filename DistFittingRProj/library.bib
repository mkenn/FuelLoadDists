file = {:D\:/MendeleyDocs/Littel, Peterson, Tjoelker - 2008 - Douglas-Fir Growth in Mountain Ecosystems Water Limits Tree Growth From Stand To Region.pdf:pdf},
journal = {Ecological Monographs},
month = {aug},
number = {3},
pages = {349--368},
title = {{Douglas-Fir Growth in Mountain Ecosystems: Water Limits Tree Growth From Stand To Region}},
