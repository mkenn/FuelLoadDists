doi = {10.1002/ecs2.1794},
file = {:D\:/MendeleyDocs/Estes_et_al-2017-Ecosphere.pdf:pdf},
issn = {21508925},
journal = {Ecosphere},
keywords = {Klamath Mountains,fire severity,temperature inversions,topography,weather},
