pages = {6--23},
title = {{Paleoecological Perspectives on Fire Ecology: Revisiting the Fire-Regime Concept}},
url = {http://benthamscience.com/open/openaccess.php?toecolj/articles/V003/S10001TOECOLJ/6TOECOLJ.htm},
