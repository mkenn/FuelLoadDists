journal = {Forest Ecology and Management},
keywords = {Ecosystem integrity,Fire history polygons,Fire regimes,Fire-free intervals,Landscape dynamics,Natural fire rotation,Patch},
number = {1-3},
pages = {207--225},
title = {{Fire history in the ponderosa pine/Douglas-fir forests on the east slope of the Washington Cascades}},
