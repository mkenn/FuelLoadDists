keywords = {differential entropy,environmental variability},
month = {apr},
pages = {50--53},
publisher = {Elsevier B.V.},
title = {{Measures of individual uncertainty for ecological models: Variance and entropy}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0304380013000422},
volume = {254},
year = {2013}
}
@article{Hyytiainen2009,
