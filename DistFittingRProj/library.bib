journal = {Ecological Modelling},
keywords = {binary classification},
month = {sep},
number = {1-2},
pages = {48--58},
title = {{A comparison of the performance of threshold criteria for binary classification in terms of predicted prevalence and kappa}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0304380008002275},
volume = {217},
