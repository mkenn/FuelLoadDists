journal = {Ecological Modelling},
keywords = {Carbon sequestration,Compromise programming,Forest management and afforestation,Structural diversity},
number = {2-4},
pages = {451--468},
title = {{Managing forest and marginal agricultural land for multiple tradeoffs: Compromising on economic, carbon and structural diversity objectives}},
volume = {185},
year = {2005}
}
