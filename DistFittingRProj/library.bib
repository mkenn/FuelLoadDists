doi = {10.1111/geb.12023},
file = {:D\:/MendeleyDocs/Babst et al. - 2013 - Site- and species-specific responses of forest growth to climate across the European continent.pdf:pdf},
isbn = {1466-8238},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Climate impacts,DGVM,Dendroclimatology,Forest ecology,Forest productivity,LPJ,NPP,ORCHIDEE,Terrestrial carbon cycle,Tree-ring},
number = {6},
