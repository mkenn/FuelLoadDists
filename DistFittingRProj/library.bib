keywords = {Argentina,Ctenomys porteousi,Habitat fragmentation,Patch occupancy,Sand dune habitat,Subterranean rodents},
number = {6},
pages = {723--733},
pmid = {1351},
title = {{Influence of patch and landscape characteristics on the distribution of the subterranean rodent Ctenomys porteousi}},
volume = {24},
