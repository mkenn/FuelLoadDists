issn = {0304-3800},
journal = {ECOLOGICAL MODELLING},
month = {mar},
number = {2-3},
pages = {177--200},
title = {{FORMOSAIC: An individual-based spatially explicit model for simulating forest dynamics in landscape mosaics}},
volume = {106},
year = {1998}
}
