journal = {Hydrological Processes},
keywords = {agriculture,crop yield,fractals,hydrology,landscape topography,scaling,soil moisture,spatial data},
month = {jun},
number = {8},
pages = {1447--1465},
title = {{Measurement, scaling, and topographic analyses of spatial crop yield and soil water content}},
