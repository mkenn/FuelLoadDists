keywords = {Forest structure,Great Lakes region,Long-term silviculture study,Pinus resinosa,Prescribed fire},
pages = {7--16},
publisher = {Elsevier B.V.},
title = {{Long-term impacts of prescribed fire on stand structure, growth, mortality, and individual tree vigor in Pinus resinosa forests}},
url = {http://dx.doi.org/10.1016/j.foreco.2016.02.038},
