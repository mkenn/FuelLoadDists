number = {2},
pages = {213--218},
pmid = {960},
title = {{How to test the significance of the relation between spatially autocorrelated data at the landscape scale: a case study using fire and forest maps}},
url = {http://www.chairenordiquecrsng.ulaval.ca/chaire_fr/PDF/FortinPayette2002.pdf},
