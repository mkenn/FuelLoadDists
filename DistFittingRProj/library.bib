journal = {Landscape Ecology},
keywords = {conifer forests {\'{a}},dry forests {\'{a}} non-equilibrium,dynamics {\'{a}} mixed,fire severity {\'{a}} mixed,historical range of variability,severity fire {\'{a}} ecoregions,{\'{a}},{\'{a}} inland northwest usa},
month = {apr},
number = {S1},
pages = {5--24},
title = {{Re-examining fire severity relations in pre-management era mixed conifer forests: inferences from landscape patterns of forest structure}},
