journal = {Ecological Complexity},
keywords = {spatial interactions},
month = {dec},
number = {4},
pages = {347--356},
publisher = {Elsevier B.V.},
title = {{Neighbourhood rules make or break spatial scale invariance in a classic model of contagious disturbance}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S1476945X11000626},
volume = {8},
year = {2011}
