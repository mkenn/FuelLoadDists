pages = {465--82},
pmid = {20405800},
title = {{Dealing with uncertainty in ecosystem models: lessons from a complex salmon model.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/20405800},
volume = {20},
year = {2010}
}
