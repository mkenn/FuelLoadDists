file = {:D\:/MendeleyDocs/Parisien, Moritz - 2009 - Environmental controls on the distribution of wildfire at multiple spatial scales.pdf:pdf},
isbn = {0012-9615},
issn = {00129615},
journal = {Ecological Monographs},
keywords = {boosted regression trees,disturbance ecology,environmental space,fire regime controls,habitat distribution models,maxent algorithm,spatial fire prediction,wildfire},
