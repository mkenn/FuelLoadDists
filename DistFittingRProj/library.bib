doi = {10.1111/j.1466-8238.2007.00334.x},
file = {:D\:/MendeleyDocs/Kissling, Carl - 2008 - Spatial autocorrelation and the selection of simultaneous autoregressive models.pdf:pdf},
issn = {1466-822X},
journal = {Global Ecology and Biogeography},
keywords = {autoregressive process,biogeography,correspondence,daniel kissling,hood structure,macroecology,model selection,neighbour-,spatial model,spatial statistics,spatial weights,species richness,w},
month = {jun},
