author = {Harrell, Frank E. Jr. and Margolis, Peter A. and Gove, Sandy and Mason, Karen E. and Mulholland, Kim E. and Lehmann, Deborah and Muhe, Lulu and Gatchalian, Salvacion and Eichenwald, Heinz F.},
